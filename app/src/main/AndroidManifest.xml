<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ua.meugen.android.popularmovies">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".PopularMovies"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MoviesActivity"
            android:label="@string/activity_movies_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MovieDetailsActivity"
            android:label="@string/activity_movie_details_title"
            android:parentActivityName=".activities.MoviesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MoviesActivity"/>
        </activity>
        <activity
            android:name=".activities.AuthorizeActivity"
            android:label="@string/activity_authorize_title"/>

        <provider
            android:name=".providers.MoviesProvider"
            android:authorities="ua.meugen.android.popularmovies"
            android:enabled="true"
            android:exported="false">
        </provider>

        <service
            android:name=".services.UpdateService"
            android:exported="false">
        </service>
    </application>

</manifest>